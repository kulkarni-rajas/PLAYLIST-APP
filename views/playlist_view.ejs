<% include partials/header %>
<link href="css/login.css" rel="stylesheet" type="text/css">

<div class="container">
	<div class="alert alert-success">
		<form action="/back" method="POST">
			<button class="btn btn-block btn-outline-success my-2 my-sm-0" role="button" >Search Again!</button>	
		</form>
	</div>
</div>

<div class="container">
    <div class="row row-cols-1 row-cols-md-3">
		<% playlists.forEach(function(playlist) { %>
		    <%if(user===playlist["author"]){%>
            <div class="col mb-4">
                <div class="card-transparent h-100">
                    <div class="card-body">
						<h4 class="card-title" style="text-align: center;" >
							
							<%if(playlist.name[0]){%>
							<strong><%=playlist.name[0].toUpperCase() +  
							playlist.name.slice(1); %></strong>
						    <%}%>
						</h4>
						<!-- <p class="card-text"><strong>CREATED BY-</strong><%=playlist["author"]%></p> -->
						<form action="/playlist/<%=playlist._id %>" method="GET">
							<input class="btn btn-block btn-outline-success my-2 my-sm-0" role="button" type="submit" value="List">
						</form>
						<form action="/playlist/<%=playlist._id %>?_method=DELETE" method="POST">
							<input class="btn btn-block btn-outline-danger" role="button" type="submit" value="Delete">
						</form>
					   
                    </div>
                </div>
            </div>
		     <%}%>
        <% }) %>
    </div>
</div>

<br><br>
<br><br>
<br><br>
<% include partials/footer %>