<% include partials/header %>
<link href="css/login.css" rel="stylesheet" type="text/css">

<div class="container">
	<div class="alert alert-success">
		<h1>Playlists</h1>
		<p>
			Your Playlists
		</p>
		<form action="/back" method="POST">
			<button class="btn btn-outline-success my-2 my-sm-0" role="button" >Search Again!</button>	
		</form>
		<br>
		<form action="/newplaylist/<%=idp%>" method="GET">
			<input type="text" placeholder="Name of Playlist" name="plyname">
			<input value="Create Playlist" class="btn btn-outline-success my-2 my-sm-0" role="button" type="submit">
		</form>
	</div>
</div>


<div class="container">
    <div class="row row-cols-1 row-cols-md-3">
		<% playlists.forEach(function(song) { %>
		     <%if(user===song["author"]){%>
            <div class="col mb-4">
                <div class="card-transparent h-100">
                    <div class="card-body">
                    <h4 class="card-title"><strong><%= song["name"] %></strong></h4>
					<!-- <h5><strong>Created by-</strong><%=song["author"]%></h5>	 -->
                    <form action="/showplay/<%=idp%>/<%=song._id%>" method="GET">
						<input class="btn btn-outline-success my-2 my-sm-0" role="button" type="submit" value="ADD">
					  </form>
                    </div>
                </div>
            </div>
		    <% } %>
        <% }) %>
    </div>
</div>

<% include partials/footer %>